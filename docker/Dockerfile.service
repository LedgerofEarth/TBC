FROM rust:1.75 as builder

WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY crates/ ./crates/

RUN cargo build --release -p coreprover-service

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/coreprover-service /usr/local/bin/
COPY crates/coreprover-service/config/default.toml /app/config/default.toml

EXPOSE 3000

CMD ["coreprover-service"]
